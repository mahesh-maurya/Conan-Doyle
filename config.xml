<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<widget id="com.wohlig.selig" version="1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Selig</name>
    <description>Amaze with Ionic</description>
    <author email="infog@wohlig.com" href="http://www.wohlig.com/">
        Wohlig
    </author>

    <content src="index.html" />

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <preference name="fullscreen" value="false" />
    <preference name="target-device" value="universal" />
    <preference name="webviewbounce" value="false" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="android-installLocation" value="auto" />
    <preference name="AllowInlineMediaPlayback" value="true" />
    <preference name="android-minSdkVersion" value="11" />
    <preference name="android-targetSdkVersion" value="14" />
    <preference name="ErrorUrl" value="" />
    <preference name="KeepRunning" value="true" />
    <preference name="LoadUrlTimeoutValue" value="20000" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="#ffffff" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />

    <icon src="res/icon/icon.png" />
    <splash src="res/screen/screen.png" />



    <!--Splash Screen Preference-->
    <!--Refer https://github.com/apache/cordova-plugin-splashscreen for more details-->
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="SplashScreenBackgroundColor" value="#ffffff" />
    <preference name="SplashMaintainAspectRatio" value="true" />

    <!--Android-->
    <platform name="android">
        <icon src="icon/android/drawable-ldpi/icon.png" density="ldpi" />
        <icon src="icon/android/drawable-mdpi/icon.png" density="mdpi" />
        <icon src="icon/android/drawable-hdpi/icon.png" density="hdpi" />
        <icon src="icon/android/drawable-xhdpi/icon.png" density="xhdpi" />
        <icon src="icon/android/drawable-xxhdpi/icon.png" density="xxhdpi" />
        <icon src="icon/android/drawable-xxxhdpi/icon.png" density="xxxhdpi" />
    </platform>
    <icon src="img/icon.png" />
    <gap:splash src="screen/android/drawable-hdpi/screen.png" gap:platform="android" density="port-hdpi" />
    <gap:splash src="screen/android/drawable-ldpi/screen.png" gap:platform="android" density="port-ldpi" />
    <gap:splash src="screen/android/drawable-mdpi/screen.png" gap:platform="android" density="port-mdpi" />
    <gap:splash src="screen/android/drawable-xhdpi/screen.png" gap:platform="android" density="port-xhdpi" />

    <!--iOS-->
    <!-- iOS 8.0+ -->
    <!-- iPhone 6 Plus  -->
    <icon src="icon/ios/icon-60@3x.png" gap:platform="ios" width="180" height="180" />
    <!-- iOS 7.0+ -->
    <!-- iPhone / iPod Touch  -->
    <icon src="icon/ios/icon-60.png" gap:platform="ios" width="60" height="60" />
    <icon src="icon/ios/icon-60@2x.png" gap:platform="ios" width="120" height="120" />
    <icon src="icon/ios/icon-60@3x.png" gap:platform="ios" width="180" height="180" />
    <!-- iPad -->
    <icon src="icon/ios/icon-76.png" gap:platform="ios" width="76" height="76" />
    <icon src="icon/ios/icon-76@2x.png" gap:platform="ios" width="152" height="152" />
    <!-- iOS 6.1 -->
    <!-- Spotlight Icon -->
    <icon src="icon/ios/icon-40.png" gap:platform="ios" width="40" height="40" />
    <icon src="icon/ios/icon-40@2x.png" gap:platform="ios" width="80" height="80" />
    <icon src="icon/ios/icon-40@3x.png" gap:platform="ios" width="120" height="120" />
    <!-- iPhone / iPod Touch -->
    <icon src="icon/ios/icon.png" gap:platform="ios" width="57" height="57" />
    <icon src="icon/ios/icon@2x.png" gap:platform="ios" width="114" height="114" />
    <!-- iPad -->
    <icon src="icon/ios/icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="icon/ios/icon-72@2x.png" gap:platform="ios" width="144" height="144" />
    <!-- iPhone Spotlight and Settings Icon -->
    <icon src="icon/ios/icon-small.png" gap:platform="ios" width="29" height="29" />
    <icon src="icon/ios/icon-small@2x.png" gap:platform="ios" width="58" height="58" />
    <icon src="icon/ios/icon-small@3x.png" gap:platform="ios" width="87" height="87" />
    <!-- iPad Spotlight and Settings Icon -->
    <icon src="icon/ios/icon-small-50.png" gap:platform="ios" width="50" height="50" />
    <icon src="icon/ios/icon-small-50@2x.png" gap:platform="ios" width="100" height="100" />

    <gap:splash src="screen/ios/Default~iphone.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="screen/ios/Default@2x~iphone_640x960.png" gap:platform="ios" width="640" height="960" />
    <gap:splash src="screen/ios/Default-Portrait~ipad_768x1024.png" gap:platform="ios" width="768" height="1024" />
    <gap:splash src="screen/ios/Default-Portrait@2x~ipad_1536x2048.png" gap:platform="ios" width="1536" height="2048" />
    <gap:splash src="screen/ios/Default-568h@2x~iphone_640x1136.png" gap:platform="ios" width="640" height="1136" />
    <gap:splash src="screen/ios/Default~iphone.png" gap:platform="ios" width="320" height="568" />
    <gap:splash src="screen/ios/Default-750@2x~iphone6-portrait_750x1334.png" gap:platform="ios" width="750" height="1334" />
    <gap:splash src="screen/ios/Default-1242@3x~iphone6s-portrait_1242x2208.png" gap:platform="ios" width="1242" height="2208" />

    <!--Default icon & splash-->
    <icon src="screen/android/drawable-xxhdpi/screen.png" />
    <gap:splash src="screen/ios/Default-750@2x~iphone6-portrait_750x1334.png" />


    <icon src="img/icon.png" />
    <gap:splash src="img/splash.png" />

    <gap:splash src="img/splash.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="img/splash.png" gap:platform="ios" width="640" height="960" />
    <gap:splash src="img/splash.png" gap:platform="ios" width="768" height="1024" />
    <gap:splash src="img/splash.png" gap:platform="ios" width="1536" height="2048" />
    <gap:splash src="img/splash.png" gap:platform="ios" width="640" height="1136" />
    <gap:splash src="img/splash.png" gap:platform="ios" width="320" height="568" />
    <gap:splash src="img/splash.png" gap:platform="ios" width="750" height="1334" />
    <gap:splash src="img/splash.png" gap:platform="ios" width="1242" height="2208" />

    <!--for status bar plugin-->
    <feature name="StatusBar">
        <param name="ios-package" value="CDVStatusBar" onload="true" />
    </feature>

    <!--for ionic keyboard plugin-->
    <feature name="Keyboard">
        <param name="ios-package" value="IonicKeyboard" onload="true" />
    </feature>

    <!--for splash screen plugin-->
    <feature name="SplashScreen">
        <param name="ios-package" value="CDVSplashScreen" />
        <param name="android-package" value="cordova-plugin-splashscreen" />
    </feature>
    <!-- for iOS -->
    <feature name="SocialSharing">
        <param name="ios-package" value="SocialSharing" />
    </feature>
    <!-- for Android (you will find one in res/xml) -->
    <feature name="SocialSharing">
        <param name="android-package" value="nl.xservices.plugins.SocialSharing" />
    </feature>
</widget>